//----------------------------------------------------------------------
inline
size_t
MAC:: bad_index( void )
//----------------------------------------------------------------------
{
   static size_t result = static_cast<size_t>( ~0 ) ;
   return( result ) ;
}

//----------------------------------------------------------------------
inline
double
MAC:: sqr( double const x )
//----------------------------------------------------------------------
{
   return( x*x ) ;
}

//----------------------------------------------------------------------
inline
int
MAC:: max( int const& x, int const& y ) 
//----------------------------------------------------------------------
{
   return( x>=y ? x : y ) ;
}

//----------------------------------------------------------------------
inline
size_t
MAC:: max( size_t const& x, size_t const& y ) 
//----------------------------------------------------------------------
{
   return( x>=y ? x : y ) ;
}

//----------------------------------------------------------------------
inline
double
MAC:: max( double const& x, double const& y ) 
//----------------------------------------------------------------------
{
   return( x>=y ? x : y ) ;
}

//----------------------------------------------------------------------
inline
int
MAC:: min( int const& x, int const& y ) 
//----------------------------------------------------------------------
{
   return( x<=y ? x : y ) ;
}

//----------------------------------------------------------------------
inline
size_t
MAC:: min( size_t const& x, size_t const& y ) 
//----------------------------------------------------------------------
{
   return( x<=y ? x : y ) ;
}

//----------------------------------------------------------------------
inline
double
MAC:: min( double const& x, double const& y ) 
//----------------------------------------------------------------------
{
   return( x<=y ? x : y ) ;
}

//----------------------------------------------------------------------
inline
double
MAC:: abs( double const& x )
//----------------------------------------------------------------------
{
   return( x>=0 ? x : -x ) ;
}

//----------------------------------------------------------------------
inline
size_t
MAC:: abs( int const& x )
//----------------------------------------------------------------------
{
   return (size_t)( x>=0 ? x : (-x) ) ;
}
